<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.example.animetime.widgets.AnimeTimeWebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webView"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/testBtn"
        android:text="Test"
        android:onClick="testBtnClick"/>

    <Button
        android:id="@+id/repeatTestBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repeat test"
        android:onClick="repeatTestBtnClick"
        app:layout_constraintTop_toBottomOf="@+id/testBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>