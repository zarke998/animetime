<base:WindowBase
    x:Class="AnimeTime.WPF.Views.PlayerWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:AnimeTime.WPF.Views.Base"
    xmlns:controls="clr-namespace:AnimeTime.WPF.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AnimeTime.WPF.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:videoplayercontrols="clr-namespace:AnimeTime.WPF.Views.Controls.VideoPlayerControls"
    xmlns:wpf="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
    Title="PlayerWindow"
    Width="800"
    Height="450"
    Style="{StaticResource DefaultWindow}"
    mc:Ignorable="d">
    <DockPanel LastChildFill="True">
        <TextBlock
            Margin="0,-20,0,10"
            Padding="10,0"
            DockPanel.Dock="Top"
            FontSize="22"
            Foreground="White">
            Title
        </TextBlock>
        <videoplayercontrols:VideoPlayerControlBar DockPanel.Dock="Bottom" />
        <wpf:VideoView x:Name="VlcVideoView" />
    </DockPanel>
</base:WindowBase>
