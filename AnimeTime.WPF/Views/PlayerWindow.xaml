<base:WindowBase  x:Class="AnimeTime.WPF.Views.PlayerWindow"
        xmlns:base="clr-namespace:AnimeTime.WPF.Views.Base" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimeTime.WPF.Views"
                  xmlns:wpf="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
                  mc:Ignorable="d"
        Title="PlayerWindow" Height="450" Width="800"
        Style="{StaticResource DefaultWindow}">
    <DockPanel LastChildFill="True">
        <TextBlock FontSize="22"
                   Foreground="White"
                   Padding="10,0"
                   Margin="0,-20,0,10"
                   DockPanel.Dock="Top">Title</TextBlock>
        <wpf:VideoView x:Name="VlcVideoView" />
    </DockPanel>
</base:WindowBase>
